<div class="card">
    <h3>{{title}}</h3>
    <p>{{body}}</p>
    <p>Posted by {{User.username}} on {{date}}</p>
</div>
<div class="comments">
    <h4>Comments:</h4>
    {{#each Comments as |comment|}}
    {{#if comment}}
    {{> comment comment=comment User=User username=username loggedIn=loggedIn}}
    {{/if}}

    {{/each}}

    <div id="addCommentSection">
        {{#if loggedIn}}
        <button id="commentButton">Add Comment</button>
        {{/if}}
    </div>


</div>
<a href="/dashboard">‚Üê Back to Dashboard</a>
{{#if loggedIn}}
{{#if (compare lvalue=User.username rvalue=username options="==")}}
<a href="/edit/{{id}}">Edit Post</a>
<button id="postDelete">Delete Post</button>
{{/if}}
{{/if}}

<script src="/js/single.js"></script>
{{#if loggedIn}}
{{#if (compare lvalue=User.username rvalue=username options="==")}}
<script src="/js/delete.js"></script>
{{/if}}
{{/if}}
</div>